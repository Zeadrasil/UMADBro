<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            tools:text="Poor life decision here" />

        <ImageView
            android:id="@+id/flagIV"
            android:layout_width="255dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/flag_image"
            tools:src="@drawable/ic_flag_germany" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menHealthTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:text="Mental Health:   "
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/mentalHealthPB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:indeterminate="false"
                android:minHeight="50dp"
                android:progress="1"/>

            <TextView
                android:id="@+id/mentalHealthTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:textSize="12sp"
                tools:text="1/100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phyHealthTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:text="Physical Health:"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/physicalHealthPB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:indeterminate="false"
                android:minHeight="50dp"
                android:progress="1"/>

            <TextView
                android:id="@+id/physicalHealthTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:textSize="12sp"
                tools:text="1/100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/monTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:text="Money:                "
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/moneyPB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:indeterminate="false"
                android:minHeight="50dp"
                android:progress="1"/>

            <TextView
                android:id="@+id/moneyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:textSize="12sp"
                tools:text="1/100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/karTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:text="Karma:                 "
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/karmaPB"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:indeterminate="false"
                android:minHeight="50dp"
                android:progress="1"/>

            <TextView
                android:id="@+id/karmaTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="1dp"
                android:textSize="12sp"
                tools:text="1/100" />
        </LinearLayout>

        <TextView
            android:id="@+id/optionOneTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="center"
            android:padding="16dp"
            android:text="Yes"
            android:textColor="@color/light_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/optionTwoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="center"
            android:padding="16dp"
            android:text="No"
            android:textColor="@color/light_grey"
            android:textSize="18sp" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/design_default_color_primary"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>